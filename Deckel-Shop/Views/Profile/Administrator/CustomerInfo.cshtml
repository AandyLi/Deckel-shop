            <input type="text" class="form-control" id="inputCustomerID" disabled value="@Model.Id">
        </div>
        <div class="col-md-6 text-right">
            <button type="button" class="btn btn-light" style="background-color:transparent">
                <i class="far fa-edit"></i>Edit
