@*orders table*@

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-bordered dt-responsive display nowrap">
            <thead>
                <tr>
                    <th scope="col">ORDER#</th>
                    <th scope="col">ORDER DATE</th>
                    <th scope="col">CUSTOMER NAME</th>
                    <th scope="col">AMOUNT</th>
                    <th scope="col">ORDER TOTAL</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>

                    <td>@Html.DisplayFor(modelItem => item.Date) </td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                    <td>
                        <span data-toggle="tooltip" data-placement="bottom" title="info">
                            <button type="button" id="infoModalBtn" class="btn btn-light" data-toggle="modal" data-target="#exampleModalCenter" style="background-color:transparent">
                                <i class="fas fa-info-circle"></i>

                            </button>
                        </span>

                        <span data-toggle="tooltip" data-placement="bottom" title="delete">
                            <button onclick="MyFunction(@*model.id*@)" type="button" id="ModalShowBtn" class="btn btn-light" data-toggle="modal" data-target="#exampleModal-deleteOrder" style="background-color:transparent">
                                <i class="far fa-trash-alt"></i>
                            </button>
                        </span>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

