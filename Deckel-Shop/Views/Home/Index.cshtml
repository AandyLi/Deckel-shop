@{
    ViewData["Title"] = "Home Page";
}
<body class="flex-column">

    <div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" data-interval="500">
            <div class="carousel-item active">
                <div class="overlay-image" style="background-image: url('https://media.istockphoto.com/photos/man-wearing-a-propeller-beanie-picture-id187105396?k=6&m=187105396&s=612x612&w=0&h=fGHCP98-7HXYC4p89Fl9Zi_doRKDo-IA52cLcUMZDeY=');"></div>
                <div class="container-p">
                    <h1>True pleasure</h1>
                    <p>
                        The joy of the propeller cap, brings smiles upon not only yourself. But those around you
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                <div class="overlay-image" style="background-image: url('https://thumbs.dreamstime.com/b/caucasian-woman-wearing-propeller-cap-2043903.jpg');"></div>
                <div class="container-p">
                    <h1>Happyness neverending</h1>
                    <p>
                        Look at our happy customers, they have felt never ending joy since buying the products from our store!
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                <div class="overlay-image" style="background-image: url('https://www.pulju.net/images/products/propellihattu_orig.jpg');"></div>
                <div class="container-p">
                    <h1>Dont be out be in!</h1>
                    <p>
                        Famous celebreties around the world enjoys our products, why not join the propeller club? You will not regret it!
                    </p>
                </div>
            </div>
        </div>
        <a href="#myCarousel" class="carousel-control-prev" role="button" data-slide="prev">
            <span class="sr-only">Previous</span>
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a href="#myCarousel" class="carousel-control-next" role="button" data-slide="next">
            <span class="sr-only">Previous</span>
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>

    <h2 class="headline-3 text-color-primary-dark">Enjoy our Products</h2>
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <img alt="Bootstrap Image Preview" class="w-100" src="~/Image/Surprised-propeller keps.jpg" width="500" height="500" />
            </div>
