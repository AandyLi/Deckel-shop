@{
    ViewData["Title"] = "Home Page";
}
<body class="flex-column">

    <style>

        .headline-3 {
            margin-top: 100px
        }


        .col-md-6 .btn {
            position: absolute;
            top: 85%;
            left: 20%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            background-color: white;
            color: rgb(0, 0, 0);
            font-size: 16px;
            padding: 12px 24px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }


        .carousel-item {
            height: 32rem;
            background: rgb(0, 0, 0);
            color: white;
            position: relative;
        }

        .container-p {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 50px;
        }
        .container-p .btn{
            color:#000000;
            background-color:white;
        }

        .overlay-image {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            top: 0;
            background-position: center;
            background-size: cover;
            opacity: 0.8;
        }
    </style>

    <div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" data-interval="500">
            <div class="carousel-item active">
                <div class="overlay-image" style="background-image: url(./image/Surprised-propeller\ keps.jpg);"></div>
                <div class="container-p">
                    <h1>True pleasure</h1>
                    <p>
                        The joy of the propeler cap, brings smiles upon not only yourself. But those around you
                    </p>
                    <a href="#" class="btn btn-lg btn-primary">
                        Shop
                    </a>
                </div>
            </div>
            <div class="carousel-item">
                <div class="overlay-image" style="background-image:url(./image/Surprised-propeller\ keps.jpg);"></div>
                <div class="container-p">
                    <h1>Happyness neverending</h1>
                    <p>
                        Look at our happy customers, they have felt never ending joy since buying the products from our store!
                    </p>
                    <a href="#" class="btn btn-lg btn-primary">
                        Shop
                    </a>
                </div>
            </div>
            <div class="carousel-item">
                <div class="overlay-image" style="background-image:url(./image/obamahatt.jpg);"></div>
                <div class="container-p">
                    <h1>Dont be out be in!</h1>
                    <p>
                        Famous celebreties around the world enjoys our products, why not join the propeler club? You will not regret it!
                    </p>
                    <a href="#" class="btn btn-lg btn-primary">
                        Shop
                    </a>
                </div>
            </div>
        </div>
        <a href="#myCarousel" class="carousel-control-prev" role="button" data-slide="prev">
            <span class="sr-only">Previous</span>
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a href="#myCarousel" class="carousel-control-next" role="button" data-slide="next">
            <span class="sr-only">Previous</span>
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>

    <h2 class="headline-3 text-color-primary-dark">Enjoy our Products</h2>
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <img alt="Bootstrap Image Preview" class="w-100" src="~/Image/obamahatt.jpg" width="500" height="500" />
                <button href="#" class="btn btn-lg btn-primary">Join the club</button>
            </div>
            <div class="col-md-6">
                <img  id="Test" alt="Bootstrap Image Preview" class="w-100" src="~/Image/Happy propeler Man.png" width="500" height="500" />
                <button href="#" class="btn btn-lg btn-primary">Just a click away</button>
            </div>
        </div>
    </div>

    <h2 class="headline-3 text-color-primary-dark">Pirate collection</h2>
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <img alt="Bootstrap Image Preview" class="w-100" src="~/Image/PirateGirl.jpg" height="670" />
                <button href="#" class="btn btn-lg btn-primary">Yarr!</button>
            </div>
            <div class="col-md-6">
                <img alt="Bootstrap Image Preview" class="w-100" src="~/Image/PirateGirl2.jpg" height="670"/>
                <button href="#" class="btn btn-lg btn-primary">Im in!</button>
            </div>
        </div>
    </div>

</body>
